{
  "Type": "Component",
  "Name": "Camera",
  "Description": "Camera component.",
  "BaseClasses": [
    "XeCore::Common::IRtti",
    "XeCore::Common::MemoryManager::Manageable",
    "Component"
  ],
  "Properties": [
    {
      "Name": "Size",
      "Description": "Size of view in world-space.",
      "ValueType": "sf::Vector2f",
      "DefaultValue": "[100, 100]"
    },
    {
      "Name": "Zoom",
      "Description": "Zoom factor.",
      "ValueType": "float",
      "DefaultValue": "1"
    },
    {
      "Name": "ZoomOut",
      "Description": "Zoom-out factor.",
      "ValueType": "float",
      "DefaultValue": "1"
    },
    {
      "Name": "Viewport",
      "Description": "Viewport rectangle.",
      "ValueType": "sf::FloatRect",
      "DefaultValue": "[0, 0, 1, 1]"
    },
    {
      "Name": "ApplyViewToRenderTexture",
      "Description": "Determines if view settings should be used when camera renders content into RenderTexture.",
      "ValueType": "bool",
      "DefaultValue": "false"
    },
    {
      "Name": "KeepAspectRatio",
      "Description": "Determines how view should keep aspect ratio relative to window.",
      "ValueType": "@Enum:[ \\\"karNone\\\", \\\"karAxisX\\\", \\\"karAxisY\\\" ]",
      "DefaultValue": "\"karNone\""
    },
    {
      "Name": "GenerateRenderTexture",
      "Description": "Determines how to generate render texture.",
      "ValueType": "@Enum:[ \\\"grtNone\\\", \\\"grtFromValue\\\", \\\"grtFromView\\\" ]",
      "DefaultValue": "\"grtNone\""
    },
    {
      "Name": "RenderTextureSize",
      "Description": "Size of render texture.",
      "ValueType": "sf::Vector2u",
      "DefaultValue": "[0, 0]"
    },
    {
      "Name": "RenderTextureSizePower",
      "Description": "Power of render texture size.",
      "ValueType": "int",
      "DefaultValue": "0"
    }
  ],
  "FunctionalityTriggers": []
}