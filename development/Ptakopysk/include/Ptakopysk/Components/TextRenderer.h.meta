    "XeCore::Common::IRtti",
    "XeCore::Common::MemoryManager::Manageable",
    "Component"
  ],
  "Properties": [
    {
      "Name": "Text",
      "Description": "Text value.",
      "ValueType": "sf::String",
      "DefaultValue": ""
